---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{ page.title }}
      {% if page.cv_pdf %}
        <a
          href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url}}"
          target="_blank"
          rel="noopener noreferrer"
          class="float-right"
        >
          <i class="fas fa-file-pdf"></i
        ></a>
      {% endif %}
    </h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <article>
    <!-- Embedding the PDF CV directly -->
    <iframe
      src="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url}}#toolbar=0"
      width="100%"
      height="500"
      frameborder="0"
      marginwidth="0"
      marginheight="0"
      scrolling="auto"
      allowfullscreen
    >
    </iframe>
  </article>
</div>
